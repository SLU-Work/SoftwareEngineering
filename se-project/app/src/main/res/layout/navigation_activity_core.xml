<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- This LinearLayout represents the contents of the screen  -->
    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- The ActionBar displayed at the top -->
        <include
            android:id="@+id/navigation_toolbar"
            layout="@layout/navigation_toolbar" />

        <!-- The main content view where fragments are loaded -->
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/navigation_toolbar"
            android:id="@+id/navigation_activity_container">
        </FrameLayout>

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|right"
            app:fabSize="normal"
            app:layout_behavior="com.slu.se_project.main.ScrollAwareFABBehavior"
            app:layout_anchor="@+id/navigation_activity_container"
            app:layout_anchorGravity="bottom|right|end"
            android:layout_margin="32dp"
            android:clickable="true"
            android:visibility="gone"
            app:backgroundTint="@color/nav_toolbar"
            app:elevation="6dp"
            />
    </android.support.design.widget.CoordinatorLayout>

    <!-- The navigation drawer that comes from the left -->
    <!-- Note that `android:layout_gravity` needs to be set to 'start' -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/nav_view_bg"
        app:headerLayout="@layout/navigation_drawer_header"
        app:menu="@menu/navigation_drawer" />
</android.support.v4.widget.DrawerLayout>