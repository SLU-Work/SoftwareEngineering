<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:windowSoftInputMode="stateVisible"
    android:padding="20dp"
    tools:context="com.slu.se_project.login.reg_welcomeFrag">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:gravity="center_horizontal"

        android:text="@string/welcome"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />


    <TextView
        android:id="@+id/name_prompt"
        android:layout_below="@+id/welcome"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="@string/name_prompt"
        android:textStyle="bold"
        android:textAppearance="?android:attr/textAppearanceMedium"
        />

    <TextView
        android:id="@+id/fname"
        android:layout_below="@+id/name_prompt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="@string/fname"
        />

    <EditText
        android:id="@+id/fname_editText"
        android:layout_below="@+id/fname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:background="@drawable/edittext_bottom_line"
        android:inputType="textPersonName"
        android:ems="10"
        />

    <TextView
        android:id="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="@string/lname"
        android:layout_below="@+id/fname_editText"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/lname_editText"
        android:layout_below="@+id/lname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:background="@drawable/edittext_bottom_line"
        android:inputType="textPersonName"
        android:ems="10"
         />

    <TextView
        android:id="@+id/message_accept"
        android:gravity="center"
        android:layout_below="@+id/lname_editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"

        android:text="@string/message_accept"
        />

    <Button
        android:id="@+id/signUp_button"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="50dp"

        android:text="@string/signUp"
        />

</RelativeLayout>
